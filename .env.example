# ============================================
# CRM AUGU - 환경 변수 템플릿
# ============================================
# 이 파일을 .env로 복사하여 사용하세요
# cp .env.example .env

# ============================================
# 🌍 애플리케이션 설정
# ============================================
NODE_ENV=development
APP_NAME=CRM_AUGU
APP_VERSION=1.0.0
PORT=8080
CLIENT_URL=http://localhost:5173

# ============================================
# 🗄️ 데이터베이스 설정
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/crm_augu?schema=public
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=crm_augu

# ============================================
# 🔐 인증 설정
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# 📦 Redis 설정
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# ============================================
# 📧 이메일 설정 (추후 구현)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@crm-augu.com

# ============================================
# 💾 파일 저장소 설정 (MinIO - 추후 구현)
# ============================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=crm-augu
MINIO_USE_SSL=false

# ============================================
# 🔍 검색 엔진 설정 (Elasticsearch - 추후 구현)
# ============================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# ============================================
# 📊 모니터링 설정 (추후 구현)
# ============================================
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
LOG_LEVEL=info

# ============================================
# 🔒 보안 설정
# ============================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=10

# ============================================
# 🧪 테스트 설정
# ============================================
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/crm_augu_test?schema=public
TEST_JWT_SECRET=test-jwt-secret
TEST_PORT=8081

# ============================================
# 📱 외부 API 설정 (추후 구현)
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
KAKAO_API_KEY=
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

# ============================================
# 🚀 배포 설정 (프로덕션 전용)
# ============================================
# PM2_APP_NAME=crm-augu
# PM2_INSTANCES=max
# CLUSTER_MODE=true